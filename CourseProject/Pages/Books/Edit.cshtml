@page
@model CourseProject.Pages.Books.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row mb-3">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.BookId" />
            <div class="form-group">
                <label asp-for="Book.ImageFileName" class="control-label"></label>
                <input asp-for="Book.ImageFileName" class="form-control" />
                <span asp-validation-for="Book.ImageFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Descriptions" class="control-label"></label>
                <input asp-for="BookDescriptions" class="form-control" />
                <span asp-validation-for="Book.Descriptions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Categories" class="control-label"></label>
                <input asp-for="BookCategories" class="form-control" />
                <span asp-validation-for="Book.Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Authors" class="control-label"></label>
                <input asp-for="BookAuthors" class="form-control" />
                <span asp-validation-for="Book.Authors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Countries" class="control-label"></label>
                <input asp-for="BookCountries" class="form-control" />
                <span asp-validation-for="Book.Countries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Languages" class="control-label"></label>
                <input asp-for="BookLanguages" class="form-control" />
                <span asp-validation-for="Book.Languages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Pages" class="control-label"></label>
                <input asp-for="Book.Pages" class="form-control" />
                <span asp-validation-for="Book.Pages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Year" class="control-label"></label>
                <input asp-for="Book.Year" class="form-control" />
                <span asp-validation-for="Book.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">
        <input type="button" value="Back to List" class="btn-secondary btn" />
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
