@page
@model CourseProject.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Book.ImageFileName" class="form-label control-label">Image</label>
                <input asp-for="Book.ImageFileName" class="form-control" aria-describedby="BookImageFileNameHelp" />
                <div id="BookImageFileNameHelp" class="form-text">
                    Enter the filename (including the extension) of the image. Do not enter the file path or the directory containing the file.
                </div>
                <span asp-validation-for="Book.ImageFileName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Descriptions" class="form-label control-label"></label>
                <input asp-for="Book.Descriptions" class="form-control" aria-describedby="BookDescriptionsHelp" />
                <div id="BookDescriptionsHelp" class="form-text">
                    Multiple descriptions are separated by semi-colons.
                </div>
                <span asp-validation-for="Book.Descriptions" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Categories" class="form-label control-label"></label>
                <input asp-for="Book.Categories" class="form-control" aria-describedby="BookCategoriesHelp" />
                <span asp-validation-for="Book.Categories" class="text-danger"></span>
                <div id="BookCategoriesHelp" class="form-text">
                    Multiple categories are separated by semi-colons.
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Authors" class="form-label control-label"></label>
                <input asp-for="Book.Authors" class="form-control" aria-describedby="BookAuthorsHelp" />
                <div id="BookAuthorsHelp" class="form-text">
                    Multiple authors are separated by semi-colons.
                </div>
                <span asp-validation-for="Book.Authors" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Countries" class="form-label control-label"></label>
                <input asp-for="Book.Countries" class="form-control" aria-describedby="BookCountriesHelp" />
                <div id="BookCountriesHelp" class="form-text">
                    Multiple countries are separated by semi-colons.
                </div>
                <span asp-validation-for="Book.Countries" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Languages" class="form-label control-label"></label>
                <input asp-for="Book.Languages" class="form-control" aria-describedby="BookLanguagesHelp" />
                <div id="BookLanguagesHelp" class="form-text">
                    Multiple languages are separated by semi-colons.
                </div>
                <span asp-validation-for="Book.Languages" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Pages" class="form-label control-label"></label>
                <input asp-for="Book.Pages" class="form-control" />
                <span asp-validation-for="Book.Pages" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Year" class="form-label control-label"></label>
                <input asp-for="Book.Year" class="form-control" />
                <span asp-validation-for="Book.Year" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Book.Price" class="form-label control-label"></label>
                <input asp-for="Book.Price" class="form-control" aria-describedby="BookPriceHelp" />
                <div id="BookPriceHelp" class="form-text">
                    Enter the price in CAD$.
                </div>
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mb-3">
                <input type="submit" value="Create" class="btn btn-primary me-2" />
                <a asp-page="Index">
                    <input type="button" value="Back to List" class="btn-secondary btn" />
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
